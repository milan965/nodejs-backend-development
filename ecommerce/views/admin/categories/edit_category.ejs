<%- include('../header') %>

<div class="content" style="height: 85vh;">
            <div class="animated fadeIn">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="card">
                            <div class="card-header">
                                <strong class="card-title">Category Manage</strong>
                            </div>
                            <div class="card-body">
                                <!-- Credit Card -->
                                <div id="pay-invoice">
                                    <div class="card-body">
                                        <div class="card-title">
                                            <h3 class="text-center mb-3">Category Edit</h3>


                                            <% if(locals.success != "") { %>
                                                <div class="sufee-alert alert with-close alert-success alert-dismissible fade show">
                                                    <span class="badge badge-pill badge-success"></span>
                                                    <%= success %>
                                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                        <span aria-hidden="true">Ã—</span>
                                                    </button>
                                                </div>
                                            <% } %>

                                        </div>
                                        <hr>
                                        <form method="post" action="/admin/category/updatecategory">
                                            <input type="text"name="editid" value="<%= single.id %>">
                                            <div class="mb-3">
                                                <label for="category" class="form-label">Category</label>
                                                <input type="text" name="category" value="<%= single.category %>" class="form-control" placeholder="Enter category" required>
                                            </div>
                                           
                                            <button type="submit" class="btn btn-primary">Submit</button>
                                        </form>
                                    </div>
                                </div>

                            </div>
                        </div> <!-- .card -->

                    </div><!--/.col-->
            </div>


        </div><!-- .animated -->
        </div><!-- .content -->

        <div class="clearfix"></div>

<%- include('../footer') %>
